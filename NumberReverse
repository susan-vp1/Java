import java.util.Scanner;

public class NumberReverse {
	public static void main(String args[]) {
		System.out.println("Enter a number to find reverse:");
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
		int rev = 0;
		do {
			rev = rev*10 + num%10;
		}while((num/=10) >0);
		System.out.println("Reverse = " + rev);
	}
}
